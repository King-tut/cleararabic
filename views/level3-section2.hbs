<script>
   $(document).ready(function(){
    $('#advance').hide();

    $("#sample-div div").each(function(e) {
  
    if (e != 0){
      $(this).hide();
    }

    

    
        
});

$("#next").click(function(){
 
    if ($("#sample-div div:visible").next().length != 0){
       $("#sample-div div:visible").next().fadeIn().prev().hide();
      
    }
       
         
    else {
        $("#sample-div div:visible").fadeOut();
        $("#sample-div div:first").fadeIn();
        
    }
  
   
    return false;
});

 var count =1;
  var total = 0;
 $('.counter').on('click', function(e){
      count++;
    if(count >= 5){
      $('#next').hide();
      $('#advance').show();
    }
    
});


   
   var correct = 0;
 $('.letters').draggable({
              stack: '.letters'
          });
          $('#answer-holder').droppable({
              drop: function(event, ui){
                 
              var here  = $('#here');
              ans = $(ui.draggable).attr('id');
              if(ans == 'wrong'){
                total++;
                $('#here').fadeIn('fast', function(){
                  $('#here').text('wrong answer').css('color','red').fadeOut(3000);

                });
               $('#here').text('');
              }

              

              if(ans == 'correct'){
                  correct++;
                   $('#here').fadeIn('fast', function(){
                  $('#here').text('That\'s right!').css('color','green').fadeOut(3000);

                });

              }

             
             
                 
              
               //here.text(ans);
              } //end of the drop function

              
              
          });



   
   
   });



</script>
