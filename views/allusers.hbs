<link rel="stylesheet" href="https://bootswatch.com/superhero/bootstrap.css">
<div class="container">
  <div class="row">
    <div class="col-md-6">
    <h2>Delete User account</h2>
    Number of Users{{total_users}}
 <table class="table">
     <th>ID</th>
      <th>Name</th>
      <th>Edit</th>
      <th>Delete</th>
  {{#each users}}
 
  <tr><td>{{this._id}}</td><td>{{this.name}}</td><td><button class="btn btn-success">Edit</button></td><td><button id={{this._id}} class="del-btn btn btn-danger">Delete</button></td></tr>

 {{/each}}
 </table>


  </div>
   <div class="col-md-4">
     <form class="form" action="" method="POST">
      Admin Email <input type="text" class="form-control" name="admin" id="admin">
      Admin Password <input type="text" class="form-control" name="adminpass" id="adminpass">
      <br>
      <input type="submit" name="admin-submit">

     </form>


   </div>



  </div>
</div>



<script>
 $(document).ready(function(){
  $('.del-btn').on('click', function(e){
      e.preventDefault();
      var id = $(this).attr('id');
    var row = $(this).closest('tr');
    $.ajax({
      type:'DELETE',
      url: '/delete',
      data:{id:id},
      success: function(res){
        row.remove();
      }
    });
  console.log(id);
  });



 });



</script>